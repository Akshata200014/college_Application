<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="172dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="552dp"
        android:gravity="center"
        android:text="@string/clg_name"
        android:textColor="#010C0C"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/admin"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="395dp"
        android:contentDescription="@string/image"
        android:scaleType="fitXY"
        android:src="@drawable/aaa" />


    <TextView
        android:id="@+id/text_admin"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="361dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="335dp"
        android:gravity="center"
        android:text="@string/admin_text"
        android:textColor="#010505"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/coordinator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="432dp"
        android:layout_marginEnd="259dp"
        android:layout_marginBottom="229dp"
        android:contentDescription="@string/image"
        android:scaleType="fitXY"
        android:src="@drawable/aaa" />

    <TextView
        android:id="@+id/text_coordinator"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="529dp"
        android:layout_marginEnd="238dp"
        android:layout_marginBottom="167dp"
        android:gravity="center"
        android:text="@string/text_coordinator"
        android:textColor="#010505"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/faculty"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="267dp"
        android:layout_marginTop="432dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="229dp"
        android:contentDescription="@string/image"
        android:scaleType="fitXY"
        android:src="@drawable/aaa" />

    <TextView
        android:id="@+id/text_faculty"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="275dp"
        android:layout_marginTop="529dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="167dp"
        android:gravity="center"
        android:text="@string/faculty"
        android:textSize="17sp"
        android:textColor="#010505"
        android:textStyle="bold" />


</RelativeLayout>

